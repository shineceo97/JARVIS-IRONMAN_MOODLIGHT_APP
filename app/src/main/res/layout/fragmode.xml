<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></LinearLayout>



        <TextView
            android:id="@+id/modetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GENERAL MORE"
            android:textSize="50sp"
            android:textColor="@color/ironmanyellow"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/generalmode"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="General Mode"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/dustmode"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Dust Mode"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/ramdonmode"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Random Mode"
            android:layout_gravity="center"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></LinearLayout>




</LinearLayout>