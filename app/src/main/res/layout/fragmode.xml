<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">


    <TextView
        android:id="@+id/modetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GENERAL MORE"
        android:textSize="50sp"
        android:textColor="@color/ironmanyellow"/>

    <Button
        android:id="@+id/generalmode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="General Mode"/>

    <Button
        android:id="@+id/dustmode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dust Mode"/>
    <Button
        android:id="@+id/ramdonmode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Random Mode"/>




</LinearLayout>